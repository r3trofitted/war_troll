<%= tag.section class: class_names("skill", "developed": skill.ranks.to_i.positive?) do %>
  <h1><%= name %></h1>
  <%= form.fields_for skill do |f| %>
    <%= f.text_field :development_cost, label_class: "dev-cost", readonly: true %>
    <fieldset class="skill-ranks">
      <%= skill_rank_checkboxes(skill.ranks) %>
    </fieldset>
    <%= f.bonus_field :rank_bonus, readonly: true %>
    <% if skill.respond_to? :normal_bonus %>
      <%= f.bonus_field :normal_bonus, kind: f.object.stat.abbr, readonly: true %>
    <% else %>
      <%= na_bonus_tag %>
    <% end %>
    
    <% if skill.respond_to? :level_bonus %>
      <%= f.bonus_field :level_bonus, kind: :level, readonly: true %>
    <% else %>
      <%= na_bonus_tag %>
    <% end %>
    
    <%= f.bonus_field :object_bonus, kind: :object, readonly: true %>
    <%= f.bonus_field :special_bonus_1, kind: :special, readonly: true %>
    <%= f.bonus_field :special_bonus_2, kind: :special, readonly: true %>
    <%= f.bonus_field :special_bonus_3, kind: :special, readonly: true %>
    <%= f.bonus_field :total_bonus, kind: :total, readonly: true %>
  <% end %>
<% end %>
