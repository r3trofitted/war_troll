<%= turbo_frame_tag "new_participation" do %>
  <%= form_with model: [@participation.round, @participation], class: "participation edit_mode block" do |f| %>
    <%= f.fields_for :combatant do |cf| %>
      <%= cf.label :name, class: "name label" %>
      <%= cf.text_field :name, autofocus: true, class: "name value" %>

      <%= cf.label :base_hit_points, class: "hits label" %>
      <%= cf.text_field :base_hit_points, class: "hits value" %>
    <% end %>
  
    <%= f.label :base_activity, class: "activity label" %>
    <%= f.text_field :base_activity, class: "activity value" %>
    
    <%= f.button class: "add_combatant" %>
  <% end %>
<% end %>
